{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "module": "commonjs",
    "target": "ES2020",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "declaration": true,
    "lib": [
      "ES2018",
      "dom"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/__mocks__/*",
    "src/**/__fixtures__/*"
  ]
}
